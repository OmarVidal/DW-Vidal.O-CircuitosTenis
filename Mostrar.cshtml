@{
    Layout = "~/Shared/Layouts/_Layout.cshtml";
    Page.Title = "Jugadores";

	var db = Database.Open("CircuitosTorneo");
	var sqlSelect = "SELECT Licencia,Nombre,Apellidos,Categoria FROM Jugadores";

	var jugadores = db.Query(sqlSelect);
}
<h2>@Page.Title</h2>
<table>
    <tr>
        <th>Licencia</th>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Categoria</th>
    </tr>
    @foreach(var i in jugadores)
    {
        <tr>
            <td>@i.Licencia</td>   
            <td>@i.Nombre</td>   
            <td>@i.Apellidos</td>   
            <td>@i.Categoria</td> 
        </tr>  
    }

</table>
<a id="inicio" href="~/default">Volver al Inicio</a>

